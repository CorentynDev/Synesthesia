<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/musicImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="Image de la chanson"
        android:src="@drawable/placeholder_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/musicTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Track Title"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/musicArtistTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Artist Name"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- Bouton Play/Pause -->
    <ImageButton
        android:id="@+id/playPauseButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Play/Pause Button"
        android:src="@drawable/bouton_de_lecture"
        android:layout_marginEnd="9dp"/>

</LinearLayout>
